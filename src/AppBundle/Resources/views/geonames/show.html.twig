{% extends 'base.html.twig' %}

{% block pageheader %}  
    <h1>Geonames</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('geonames_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th><span data-toggle="popover" data-content="Location’s URI from Geonames.com" data-trigger="hover" data-placement="bottom">Geoname ID</span></th>
                <td>{{ geoname.geonameid }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Location’s name" data-trigger="hover" data-placement="bottom">Name</span></th>
                <td>{{ geoname.name }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Number of titles associated with the location" data-trigger="hover" data-placement="bottom">Titles</span></th>
                <td>
                    <a href="{{ path('geonames_titles', {'id': geoname.geonameid}) }}">
                        {{ geoname.titles | length }}
                    </a>
                </td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Number of firms associated with the location" data-trigger="hover" data-placement="bottom">Firms</span></th>
                <td>
                    <a href="{{ path('geonames_firms', {'id': geoname.geonameid}) }}">
                        {{ geoname.firms | length }}
                    </a>
                </td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Number of people that were born and died in the location" data-trigger="hover" data-placement="bottom">People</span></th>
                <td>
                    <a href="{{ path('geonames_people', {'id': geoname.geonameid}) }}">
                        Born: {{ geoname.peopleBorn | length }}, Died: {{ geoname.peopleDied | length }}
                    </a>
                </td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Location’s name in ASCII code" data-trigger="hover" data-placement="bottom">ASCII name</span></th>
                <td>{{ geoname.asciiname }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Location’s latitude" data-trigger="hover" data-placement="bottom">Latitude</span></th>
                <td>{{ geoname.latitude }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Location’s longitude" data-trigger="hover" data-placement="bottom">Longitude</span></th>
                <td>{{ geoname.longitude }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Initials of the country" data-trigger="hover" data-placement="bottom">Country</span></th>
                <td>{{ geoname.country }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Feature code of a primary administrative division of a country" data-trigger="hover" data-placement="bottom">Admin 1</span></th>
                <td>{{ geoname.admin1 }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Feature code of a subdivision of a first-order administrative division" data-trigger="hover" data-placement="bottom">Admin 2</span></th>
                <td>{{ geoname.admin2 }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Feature code of a subdivision of a second-order administrative division" data-trigger="hover" data-placement="bottom">Admin 3</span></th>
                <td>{{ geoname.admin3 }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Feature code of a subdivision of a third-order administrative division" data-trigger="hover" data-placement="bottom">Admin 4</span></th>
                <td>{{ geoname.admin4 }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
